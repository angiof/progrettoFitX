<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProgrettoFitX" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/second</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/second</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/second</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.ProgrettoFitX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProgrettoFitX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProgrettoFitX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="forms">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="background">@drawable/layout_rotondo</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="testo">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="testoForm">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="testoForm2">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/second</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/second</item>
        <item name="buttonBarButtonStyle">@style/MyButtonBarButtonStyle</item>
    </style>


    <style name="MyButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>


</resources>